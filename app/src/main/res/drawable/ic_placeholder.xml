<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền xám nhạt -->
    <solid android:color="#DDDDDD"/>

    <!-- Bo góc -->
    <corners android:radius="12dp"/>

    <!-- Viền nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#BBBBBB"/>

    <!-- Padding cho text -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"/>

</shape>
